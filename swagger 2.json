{
  "openapi": "3.0.0",
  "info": {
    "title": "API Gestión DSW",
    "version": "1.0.0",
    "description": "API del sistema de gestión de ventas, stock, empleados, clientes y autenticación."
  },
  "servers": [
    {
      "url": "http://localhost:3500",
      "description": "Servidor Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Empleado": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID del empleado (solo lectura)",
            "readOnly": true,
            "example": 101
          },
          "DNI_CUIL": {
            "type": "string",
            "example": "20-35678910-5"
          },
          "nombre_apellidoEmp": {
            "type": "string",
            "example": "Juan Pérez"
          },
          "contacto": {
            "type": "string",
            "example": "+54 9 341 1234567"
          },
          "sucursal": {
            "type": "integer",
            "description": "ID de la sucursal"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "juan.perez@empresa.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Contraseña (generalmente solo en creación/actualización)"
          },
          "idrol": {
            "type": "integer",
            "description": "ID del rol (ej: 2)"
          }
        },
        "required": [
          "DNI_CUIL",
          "nombre_apellidoEmp",
          "contacto",
          "sucursal",
          "email",
          "password",
          "idrol"
        ]
      },
      "EmpleadoCreacion": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Empleado"
          },
          {
            "properties": {
              "id": {
                "type": "integer",
                "readOnly": false
              }
            }
          }
        ]
      },
      "EmpleadoUpdate": {
        "type": "object",
        "description": "Campos opcionales para la actualización de un empleado.",
        "properties": {
          "DNI_CUIL": {
            "type": "string",
            "example": "20-35678910-5"
          },
          "nombre_apellidoEmp": {
            "type": "string",
            "example": "Juan Pérez Actualizado"
          },
          "contacto": {
            "type": "string",
            "example": "+54 9 341 9876543"
          },
          "sucursal": {
            "type": "integer"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "nuevo.email@empresa.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Nueva contraseña (opcional)"
          },
          "idrol": {
            "type": "integer",
            "example": 3
          }
        }
      },
      "Producto": {
        "type": "object",
        "properties": {
          "idProducto": {
            "type": "integer",
            "readOnly": true,
            "description": "ID del producto"
          },
          "articulo": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "cantidad": {
            "type": "integer"
          },
          "monto": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "Rol": {
        "type": "object",
        "properties": {
          "idrol": {
            "type": "integer",
            "description": "ID único del rol.",
            "readOnly": true
          },
          "rol": {
            "type": "string",
            "description": "Nombre del rol (ej: admin, vendedor)."
          }
        },
        "required": [
          "rol"
        ]
      },
      "Cliente": {
        "type": "object",
        "properties": {
          "idCliente": {
            "type": "integer",
            "readOnly": true
          },
          "dni": {
            "type": "string"
          },
          "nombre_apellidoCli": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          },
          "contacto": {
            "type": "string"
          }
        },
        "required": [
          "dni",
          "nombre_apellidoCli",
          "contacto"
        ]
      },
      "VentaDetalle": {
        "type": "object",
        "properties": {
          "idVenta": {
            "type": "integer"
          },
          "montoTotal": {
            "type": "number",
            "format": "float"
          },
          "DNIEmpleado": {
            "type": "string"
          },
          "idCliente": {
            "type": "integer"
          },
          "fecha": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "productos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "idProducto": {
                  "type": "integer"
                },
                "cantidadVendida": {
                  "type": "integer"
                },
                "subtotal": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          }
        }
      },
      "Sucursal": {
        "type": "object",
        "properties": {
          "idSucursal": {
            "type": "integer",
            "readOnly": true
          },
          "nombre": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Iniciar sesión",
        "tags": [
          "Autenticación"
        ],
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "user@test.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso, devuelve token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciales incorrectas"
          }
        }
      }
    },
    "/auth/reset-direct": {
      "post": {
        "summary": "Restablecer contraseña directamente",
        "tags": [
          "Autenticación"
        ],
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "newPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contraseña actualizada"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/ventas": {
      "get": {
        "summary": "Obtener historial de ventas",
        "tags": [
          "Ventas"
        ],
        "parameters": [
          {
            "name": "filtro",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pagina",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "limite",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de ventas paginada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/VentaDetalle"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ventas/crearVenta": {
      "post": {
        "summary": "Registrar nueva venta",
        "tags": [
          "Ventas"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "montoTotal": {
                    "type": "number"
                  },
                  "DNIEmpleado": {
                    "type": "string"
                  },
                  "idCliente": {
                    "type": "integer"
                  },
                  "productos": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "idProducto": {
                          "type": "integer"
                        },
                        "cantidadVendida": {
                          "type": "integer"
                        },
                        "subtotal": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Venta creada exitosamente"
          }
        }
      }
    },
    "/detalle_ventas/{idVenta}": {
      "get": {
        "summary": "Detalle de una venta",
        "tags": [
          "Ventas"
        ],
        "parameters": [
          {
            "name": "idVenta",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalle de productos vendidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VentaDetalle"
                }
              }
            }
          }
        }
      }
    },
    "/stock": {
      "get": {
        "summary": "Listar productos del stock",
        "tags": [
          "Stock"
        ],
        "parameters": [
          {
            "name": "producto",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pagina",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limite",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de productos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Producto"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear producto",
        "tags": [
          "Stock"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado"
          }
        }
      }
    },
    "/stock/{id}": {
      "put": {
        "summary": "Actualizar producto",
        "tags": [
          "Stock"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Producto actualizado"
          }
        }
      }
    },
    "/stockelim/{id}": {
      "put": {
        "summary": "Cambiar estado del producto (borrado lógico)",
        "tags": [
          "Stock"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "estado": {
                    "type": "string",
                    "example": "Disponible"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estado actualizado"
          }
        }
      }
    },
    "/clientes": {
      "get": {
        "summary": "Listar clientes",
        "tags": [
          "Clientes"
        ],
        "parameters": [
          {
            "name": "nombre",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Cliente"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear cliente",
        "tags": [
          "Clientes"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Cliente"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente creado"
          }
        }
      }
    },
    "/empleados": {
      "get": {
        "summary": "Obtiene la lista de todos los empleados",
        "tags": [
          "Empleados"
        ],
        "operationId": "getAllEmpleados",
        "parameters": [
          {
            "in": "query",
            "name": "nombre",
            "schema": {
              "type": "string"
            },
            "description": "Filtra los empleados por nombre (opcional)",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de empleados obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Empleado"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al obtener empleados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Error al obtener empleados"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crea un nuevo empleado",
        "tags": [
          "Empleados"
        ],
        "operationId": "createEmpleado",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmpleadoCreacion"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Empleado creado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Empleado creado"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Datos incompletos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Datos incompletos"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al crear empleado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Error al crear empleado"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/empleados/{id}": {
      "put": {
        "summary": "Actualiza un empleado existente por ID",
        "tags": [
          "Empleados"
        ],
        "operationId": "updateEmpleado",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "DNI del empleado a actualizar"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmpleadoUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Empleado actualizado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Empleado actualizado"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al actualizar empleado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Error al actualizar empleado"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/roles": {
      "get": {
        "summary": "Listar todos los roles",
        "tags": [
          "Roles"
        ],
        "responses": {
          "200": {
            "description": "Lista de roles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Rol"
                  }
                }
              }
            }
          }
        }
      }
    },
"/roles/{id}": {
        "get": {
            "tags": [
                "Roles"
            ],
            "summary": "Obtener Rol por ID",
            "description": "Busca y retorna un único rol utilizando su identificador.",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "ID del rol a obtener",
                    "required": true,
                    "schema": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Rol encontrado y retornado exitosamente.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Rol"
                            }
                        }
                    }
                },
                "404": {
                    "description": "Rol no encontrado con el ID especificado."
                },
                "500": {
                    "description": "Error interno del servidor."
                }
            }
        }
      },
      
    "/sucursales": {
      "get": {
        "summary": "Listar sucursales",
        "tags": [
          "Sucursales"
        ],
        "parameters": [
          {
            "name": "filtro",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de sucursales",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Sucursal"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}